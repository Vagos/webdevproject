<div class="PageContent">

  {{!-- Printing if user is authenticated and a participant --}}
  {{!-- <span>AUTH: {{authenticated}}</span>
  <span>participant: {{participant}}</span> --}}

  <h1 class="activity-title">{{ActivityName}}</h1>

  {{!-- Maybe we should store activityID on the html to reduce db queries? --}}
  {{!-- <small class="activity-id d-hidden">{{ActivityId}}</small> --}}
  

  {{!-- If user is a participant --}}
  {{#if participant}}
    <form class="make-post container border rounded px-3 my-2">
      {{!-- REMINDER use name for correct formdata creation --}}
      {{!-- id is not used for the dataform --}}
      <div class="row">
        <p class="mt-2 fs-3">Make post section</p>
        <hr>

        <div class="col input-group">
          <span class="input-group-text" id="title">Title:</span>
          <input class="form-control" type="text" id="post-title" name="name" placeholder="TEST POST TITLE" required>
        </div>

        <div class="col input-group">
          <span class="input-group-text" id="body">Body:</span>
          <input class="form-control" type="text" id="post-body" name="body" placeholder="TEST BODY" >
        </div>
      </div>
      
      <div class="buttons row p-3">
        {{!-- ms-auto put margin = left margin needed for item to go tot the right --}}
        <input class="btn btn-primary col-3 ms-auto" type="submit">
      </div>
      

    </form>
  {{/if}}

  {{!-- if user isnt a participant --}}
  {{#unless participant}}
    {{!-- but the user is logged in --}}
    {{#if authenticated}}
      <a href="/activities/{{ActivityName}}/join" class="join-button btn btn-success w-100 m-2">JOIN Activity</a>

      {{!-- Adding function to button --}}
      <script type="module">
        import { postJson } from "/scripts/posting-util.js";
        const joinBtn = document.querySelector("a.join-button");
        console.log(joinBtn);
        joinBtn.addEventListener('click', async (event) => {
          event.preventDefault();

          //gather data
          const data = { activity: "test" };

          // get the url from the button that called this
          const url = event.currentTarget.pathname;
          console.log(url);

          let response = await postJson({url:url, jsonData:data});

            // if response isnt an 205 (Request ok, refresh page)
            if (response.status!=205){
                // console.log("response wasnt ok, it was",response.status);
                // let user know what happend
                //if(response.status==403) alert("PARTICIPATION is already in DB.\nPlease Refresh your page or try another Title.");
            }
            else{
              // Else reload current page
              document.location.reload();
            }

        });
      </script>
    {{/if}}
  {{/unless}}

  <div>
    {{#if posts}}
      {{#each posts}}
          <div class="card">
            <div class="card-header">
              {{#if this.name}}
                <h5 class="post-title">{{this.name}}  <small class="post-creator fs-6 fw-light"><a class="text-decoration-none text-body" href="/user/{{this.creator}}">Posted by:{{this.creator_name}}</a></small> <small class="post-time fs-6 fw-light">{{this.creation_time}}</small> <small class="fs-6 fw-light">ago</small></h5>
              {{/if}}
              {{!-- This shouldn't be allowed --}}
              {{#unless this.name}}
                <h5 class="post-title">NO POST TITLE!</h5>
              {{/unless}}
            </div>
            <div class="card-body">
                <p class="post-text">{{this.body}}</p>

                {{!-- maybe put this in card footer? --}}
                <div class="enter-post d-flex justify-content-between">
                  <span class="p-2">Comments:{{this.commentCount}}</span>
                  <a href="/posts/{{this.id}}" class="btn btn-primary">view post</a>
                </div>
            </div>
          </div>
      {{/each}}
    {{/if}}
  </div>

  {{#unless posts}}
    <div>
      <p class="text-center">No posts yet!</p>
    </div>
  {{/unless}}

</div>

{{!-- Scripts section --}}
{{#if participant}}
  <script type="module" src="/scripts/activity-put-post.js"></script>
{{/if}}

<script type="module" src="/scripts/activity-timeDifferences.js"></script>