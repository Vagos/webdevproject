<h1>{{name}}</h1>

{{#each posts}}
    <div class="card">
      <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.body}}</p>
          <a href="/posts/{{this.id}}" class="btn btn-primary">view post</a>
      </div>
    </div>
{{/each}}
