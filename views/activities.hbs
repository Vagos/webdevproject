<div class="PageContent">

  

  <form class="make-activity container border rounded px-3 my-2">
    {{!-- REMINDER use name for correct formdata creation --}}
    {{!-- id is not used for the dataform --}}
    <div class="row">
      <p class="mt-2 fs-3">Make activity section</p>
      <hr>

      <div class="col input-group">
        <span class="input-group-text" id="title">Title:</span>
        <input class="form-control" type="text" id="activity-title" name="name" placeholder="TEST ACTIVITY" required>
      </div>

      <div class="col input-group">
        <span class="input-group-text" id="description">Description:</span>
        <input class="form-control" type="text" id="activity-description" name="description" placeholder="TEST DESCRIPTION" >
      </div>
    </div>
    
    <div class="buttons row p-3">
      {{!-- ms-auto put margin = left margin needed for item to go tot the right --}}
      <input class="btn btn-primary col-3 ms-auto" type="submit">
    </div>
    

  </form>
    
    

    {{!-- Maybe change clas names in cards later? --}}
    <div class="accordion" id="accordionActivity">
        {{#each activities}}
            <div class="activity card mb-2" style="width: 80%;">
              {{!-- <span>ACTIVITY ID{{this.id}}</span> --}}
                <p class="card-header d-flex justify-content-between align-content-end" style="background-color: {{this.color}};">
                  {{!-- REMEMBER TO QUERRY AS INPUT --}}
                  <span class="activity-users">Users:{{this.userCount}}</span> 
                  <span class="activity-posts">Total Posts:{{this.postCount}}</span>
                </p>
              <div class="card-body">
                  <h5 class="activity-title card-title">{{this.name}}</h5>
                <p class="activity-description card-text">{{this.description}}</p>
                <a href="/activities/{{this.name}}" class="btn btn-primary">view posts</a>
              </div>
            </div>
        {{/each}}
    </div>

</div>

