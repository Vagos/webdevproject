<div class="PageContent">
    <div class="accordion" id="accordionActivity">
        {{#each activities}}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{this.id}}" 
                        aria-expanded="false" aria-controls="collapse{{this.id}}">
                    {{this.name}}
                    </button>
                </h2>
                <div id="collapse{{this.id}}" class="accordion-collapse collapse" aria-labelledby="heading{{this.id}}" data-bs-parent="#accordionActivity">
                    <div class="accordion-body">
                        <p>{{this.description}}</p>
                        <p>members: {{this.members}}</p>
                        <a href="/activities/{{this.name}}">view posts</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

</div>
